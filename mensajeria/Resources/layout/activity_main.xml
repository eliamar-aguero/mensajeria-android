<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:p4="http://xamarin.com/mono/android/designer"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:orientation="vertical"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/linearLayout1">
		<TextView
			android:text="Menú Mensajería"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/textView1"
			android:textColor="#008080"
			android:textAlignment="center"
			android:layout_marginTop="34.5dp"
			android:shadowColor="#ff000000" />
		<TableLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/tableLayout1">
			<TableRow
                android:background="#000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="42.0dp"
				android:id="@+id/tableRow3">
				<Button
				    android:text="Ingresar Contacto"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
                    android:layout_weight="1"
				    android:id="@+id/toAddNewBtn"
				    android:textColor="#008080"
				    app:backgroundTint="@android:color/background_light" />
                <Button
				    android:text="Lista de contactos"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
                    android:layout_weight="1"
				    android:id="@+id/toContactsListBtn"
				    android:textColor="#008080"
				    app:backgroundTint="@android:color/background_light"/>
			</TableRow>
		</TableLayout>
		<ImageView
			android:src="@drawable/contactmanagement"
			android:layout_width="match_parent"
			android:layout_height="204.0dp"
			android:maxWidth="@dimen/design_fab_image_size"
			android:maxHeight="@dimen/design_fab_image_size"
			android:id="@+id/imageView1"
			android:layout_marginTop="55.0dp"
			android:layout_marginBottom="0.0dp"
			tools:src="@drawable/contactmanagement" />
	</LinearLayout>
</RelativeLayout>
